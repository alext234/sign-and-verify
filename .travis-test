#!/usr/bin/env bash
set -ex
ETHRUN=https://github.com/dapphub/ethrun/releases/download/v0.2.4/ethrun-v0.2.4-linux.tar.gz
( cd /tmp; curl -LO "$ETHRUN"; tar xf *.tar.gz; sudo mv ethrun /usr/local/bin/ )

# build 
make all

# run unit tests
make test

# run testnet tests
dapp testnet --accounts=2 -- ./testnet_script.sh